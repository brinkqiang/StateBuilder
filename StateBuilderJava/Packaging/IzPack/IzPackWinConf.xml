                <os family="Windows"/>
            </file>
            <file override="update" src="..\..\StateEditor\bin\Qt5Qml.dll" targetdir="$INSTALL_PATH/bin">
                <os family="Windows"/>
            </file>
            <file override="update" src="..\..\StateEditor\bin\Qt5XmlPatterns.dll" targetdir="$INSTALL_PATH/bin">
                <os family="Windows"/>
